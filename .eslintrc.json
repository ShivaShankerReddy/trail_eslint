{
    "env": {
        "node": true,
        "es6": true,
        "commonjs": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "ignorePatterns": ["node_modules/*.js"],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-var": "error",
        "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
        "no-undef": ["error", { "typeof": true }],
        "prettier/prettier": "error"
    }
}
